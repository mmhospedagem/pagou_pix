{
    "name": "mmhospedagem/pagou",
    "description": "Gateway de pagamento PIX para WHMCS, integração para PAGOU",
    "type": "library",
    "license": "proprietary",
    "authors": [
        {
            "name": "MMHospedagem",
            "email": "contato@mmhospedagem.com.br"
        }
    ],
    "autoload": {
        "psr-4": {
            "MMHospedagem\\App\\": "MMHospedagem/App/"
        }
    },
    "require": {
        "php": ">=7.4",
        "monolog/monolog": "^2.0",
        "endroid/qr-code": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "minimum-stability": "stable",
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist"
    },
    "scripts": {
        "test": "phpunit",
        "cs-fix": "phpcbf",
        "cs-check": "phpcs"
    }
}
